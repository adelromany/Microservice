pipeline {
    agent any

    environment {
        IMAGE_NAME = "adelromany/micreoservices-${env.GIT_BRANCH.replaceFirst('refs/heads/', '')}"
        TIMESTAMP = "${new Date().format('yyyyMMdd')}"
    }

    stages {
        stage('Build and Tag Docker Image') {
            steps {
                script {
                    def fullTag = "${env.IMAGE_NAME}:${env.TIMESTAMP}"
                    withDockerRegistry(credentialsId: 'dockercred', toolName: 'docker') {
                        sh "docker build -t ${fullTag} ."
                    }
                env.IMAGE_NAME=fullTag
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'dockercred', toolName: 'docker') {
                        sh "docker push ${env.IMAGE_NAME}"
                    }
                }
            }
        }
    }
}
